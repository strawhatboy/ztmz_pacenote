<Page x:Class="ZTMZ.PacenoteTool.WpfGUI.Views.GeneralPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ZTMZ.PacenoteTool.WpfGUI.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:system="clr-namespace:System;assembly=System.Runtime"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="GeneralPage"
      xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      mc:Ignorable="d">
    <Page.Resources>
        <!-- <Style TargetType="ui:Card">
            <Setter Property="Padding" Value="16"></Setter>
            <Setter Property="Margin" Value="0 0 0 5"></Setter>
        </Style> -->
    </Page.Resources>
    <StackPanel Orientation="Vertical">
        <!-- theme -->
        <ui:Card Margin="0 0 0 5"
                 Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="160" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <ui:SymbolIcon Symbol="DarkTheme20"
                                   FontSize="26"
                                   Margin="0 0 10 0" />
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <ui:TextBlock Text="{DynamicResource ResourceKey=settings.theme}" />
                        <ui:TextBlock Grid.Row="1"
                                      Text="{DynamicResource ResourceKey=settings.tooltip.theme}"
                                      Appearance="Tertiary"
                                      FontTypography="Caption" />
                    </Grid>
                </StackPanel>
                <ComboBox Grid.Column="1" SelectedIndex="{Binding Path=ViewModel.ThemeSelection, Mode=TwoWay}">
                    <ComboBox.Items>
                        <ComboBoxItem Content="{DynamicResource ResourceKey=settings.lightTheme}" />
                        <ComboBoxItem Content="{DynamicResource ResourceKey=settings.darkTheme}" />
                        <ComboBoxItem Content="{DynamicResource ResourceKey=settings.systemTheme}" />
                    </ComboBox.Items>
                    <b:Interaction.Triggers>
                        <b:EventTrigger EventName="SelectionChanged">
                            <b:InvokeCommandAction
                                CommandParameter="{Binding}"
                                Command="{Binding ViewModel.ThemeSelectionChangedCommand}"/>
                        </b:EventTrigger>
                    </b:Interaction.Triggers>
                </ComboBox>
            </Grid>
        </ui:Card>
        <!-- accent color -->
        <ui:Card Margin="0 0 0 5" Visibility="{Binding Path=ViewModel.AccentColorPickerVisibility, Mode=OneWay}"
                Padding="0" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="160" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <ui:SymbolIcon Symbol="Color20"
                                        FontSize="26"
                                        Margin="0 0 10 0" />
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <ui:TextBlock Text="{DynamicResource ResourceKey=settings.accentColor}" />
                            <ui:TextBlock Grid.Row="1"
                                            Text="{DynamicResource ResourceKey=settings.tooltip.accentColor}"
                                            Appearance="Tertiary"
                                            FontTypography="Caption" />
                        </Grid>
                    </StackPanel>
                    <ui:Button HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Grid.Column="1"
                                Appearance="Secondary"
                                Background="{Binding Path=ViewModel.AccentColor, Mode=OneWay}" />
                </Grid>
                <Border Grid.Row="1"
                        BorderThickness="0,1,0,0"
                        BorderBrush="{ui:ThemeResource DividerStrokeColorDefaultBrush}"
                        Background="Transparent" >
                    <Grid Margin="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="40" />
                            <ColumnDefinition Width="160" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <ui:TextBlock Text="{DynamicResource ResourceKey=settings.accentColorR}" />
                        <ui:TextBlock Grid.Row="1"
                            Text="{DynamicResource ResourceKey=settings.accentColorG}" />
                        <ui:TextBlock Grid.Row="2"
                            Text="{DynamicResource ResourceKey=settings.accentColorB}" />
                        <ui:TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Path=ViewModel.AccentColorR, Mode=OneWay}" />
                        <ui:TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Path=ViewModel.AccentColorG, Mode=OneWay}" />
                        <ui:TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Path=ViewModel.AccentColorB, Mode=OneWay}" />

                        <Slider Grid.Row="0" Grid.Column="2" Maximum="255" Minimum="0" Interval="1" Value="{Binding Path=ViewModel.AccentColorR, Mode=TwoWay}" />
                        <Slider Grid.Row="1" Grid.Column="2" Maximum="255" Minimum="0" Interval="1" Value="{Binding Path=ViewModel.AccentColorG, Mode=TwoWay}" />
                        <Slider Grid.Row="2" Grid.Column="2" Maximum="255" Minimum="0" Interval="1" Value="{Binding Path=ViewModel.AccentColorB, Mode=TwoWay}" />
                    </Grid>
                </Border>
            </Grid>
        </ui:Card>
        
        <!-- language -->
        <ui:Card Margin="0 0 0 5"
                 Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="160" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <ui:SymbolIcon Symbol="LocalLanguage20"
                                   FontSize="26"
                                   Margin="0 0 10 0" />
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <ui:TextBlock Text="{DynamicResource ResourceKey=settings.language}" />
                        <ui:TextBlock Grid.Row="1"
                                      Text="{DynamicResource ResourceKey=settings.tooltip.language}"
                                      Appearance="Tertiary"
                                      FontTypography="Caption" />
                    </Grid>
                </StackPanel>
                <ComboBox Grid.Column="1" SelectedIndex="{Binding Path=ViewModel.LanguageSelection, Mode=TwoWay}" ItemsSource="{Binding Path=ViewModel.Languages, Mode=OneWay}">
                </ComboBox>
            </Grid>
        </ui:Card>
    </StackPanel>
</Page>
